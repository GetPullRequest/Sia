# ============================================
# GITHUB APP
# ============================================
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nyour_github_private_key_here\n-----END RSA PRIVATE KEY-----\n
GITHUB_APP_SLUG=your_github_app_slug

# ============================================
# SLACK
# ============================================
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_REDIRECT_URI=https://your-app.com/integrations/slack/callback
SLACK_SIGNING_SECRET=your_slack_signing_secret

# ============================================
# OPENAI
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_RESPONSE_MODEL=

# ============================================
# SECURITY
# ============================================
SECRET_ENCRYPTION_KEY=your_32_character_hex_encryption_key

# ============================================
# TEMPORAL
# ============================================
TEMPORAL_API_KEY=your_temporal_api_key
TEMPORAL_ADDRESS=your-temporal-namespace.tmprl.cloud:7233
TEMPORAL_NAMESPACE=your-temporal-namespace

# ============================================
# FRONTEND URL (for CORS configuration)
# ============================================
FRONT_END_URL=http://localhost:3000
